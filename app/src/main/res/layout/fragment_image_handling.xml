<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/cl_content"
	android:fitsSystemWindows="true"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/primaryBackground">

	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/primaryBackground"
		app:elevation="0dp">

		<com.google.android.material.appbar.CollapsingToolbarLayout
			android:id="@+id/ctToolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_scrollFlags="scroll|exitUntilCollapsed"
			app:elevation="0dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="?attr/actionBarSize"
				android:layout_marginStart="@dimen/margin_normal"
				android:layout_marginEnd="@dimen/margin_normal"
				android:orientation="vertical"
				app:layout_collapseMode="parallax">

				<TextView
					android:id="@+id/tv_select_image"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/margin_normal"
					android:gravity="center"
					android:text="@string/select_image"
					android:textAppearance="@style/Text.Bold.XLarge"/>

				<ImageView
					android:id="@+id/iv_preview"
					android:layout_width="match_parent"
					android:layout_height="@dimen/image_preview_height"
					android:layout_marginBottom="@dimen/margin_normal"
					android:contentDescription="@string/image_preview"
					android:scaleType="fitCenter"
					android:src="@drawable/ic_placeholder"/>

			</LinearLayout>

			<include
				layout="@layout/toolbar_main"
				app:layout_collapseMode="pin"/>

		</com.google.android.material.appbar.CollapsingToolbarLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginStart="@dimen/margin_normal"
			android:layout_marginEnd="@dimen/margin_normal"
			android:orientation="vertical">

			<Button
				android:id="@+id/btn_remove_all"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="@dimen/margin_normal"
				android:gravity="center"
				android:text="@string/remove_all"
				android:visibility="gone"
				tools:visibility="visible"/>

			<Button
				android:id="@+id/btn_share"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="@dimen/margin_normal"
				android:gravity="center"
				android:text="@string/share"
				android:visibility="gone"
				tools:visibility="visible"/>

			<Button
				android:id="@+id/btn_save"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="@dimen/margin_normal"
				android:gravity="center"
				android:text="@string/save"
				android:visibility="gone"
				tools:visibility="visible"/>
		</LinearLayout>

	</com.google.android.material.appbar.AppBarLayout>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/rv_exif"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_normal"
		android:layout_marginEnd="@dimen/margin_normal"
		android:nestedScrollingEnabled="true"
		android:orientation="vertical"
		android:scrollbars="vertical"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
		tools:listitem="@layout/row_exif_attribute"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>