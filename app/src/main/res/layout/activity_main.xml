<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/drawerLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	tools:openDrawer="start"
	tools:context="org.amoustakos.exifstripper.ui.activities.MainActivity">

	<android.support.design.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true">

		<include layout="@layout/toolbar_main" />
		<include layout="@layout/content_main" />

	</android.support.design.widget.CoordinatorLayout>

	<android.support.design.widget.NavigationView
		android:id="@+id/navView"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:background="@color/background_generic"
		android:layout_gravity="start"
		android:fitsSystemWindows="true"
		app:itemIconTint="@color/cs_drawer_item_text"
		app:itemTextColor="@color/cs_drawer_item_text"
		app:itemBackground="@drawable/cs_drawer_item_background"
		app:headerLayout="@layout/nav_header_main"
		app:menu="@menu/activity_main_drawer"/>

</android.support.v4.widget.DrawerLayout>
